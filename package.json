{
  "name": "mattbrealeydotcom",
  "description": "Code for my personal portfolio/site written with SvelteJS/Sapper + TailwindCSS",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/badgrenola/mattbrealeydotcom.git"
  },
  "keywords": [
    "svelte",
    "sapper",
    "tailwind",
    "tailwindcss",
    "blog",
    "portfolio"
  ],
  "author": "Matt Brealey",
  "license": "MIT",
  "homepage": "https://mattbrealey.com",
  "scripts": {
    "dev": "concurrently 'sapper dev' 'npm:watch:tailwind'",
    "build": "npm run build:tailwind && sapper build",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "export": "npm run build:tailwind && sapper export",
    "start": "node __sapper__/build",
    "test": "run-p --race dev cy:run",
    "deploy": "npm run export && npm run clean --prefix ../tori-f84.github.io && cp -v -a __sapper__/export/* ../tori-f84.github.io/ && npm run publish --prefix ../tori-f84.github.io"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "autoprefixer": "^9.7.4",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "marked": "^0.8.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^7.1.0",
    "postcss-load-config": "^2.1.0",
    "rollup": "^1.20.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "sapper": "^0.27.16",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^3.5.0",
    "tailwindcss": "^1.2.0"
  }
}
